{
  "name": "dhis2-analytics-messenger-saas",
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "turbo": "latest"
  },
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:core": "turbo run dev --filter=core",
    "dev:panel": "turbo run dev --filter=panel",
    "dev:messaging": "turbo run dev --filter=messaging",
    "dev:visualizer": "turbo run dev --filter=visualizer",
    "start:visualizer": "turbo run start --filter=visualizer",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ]
}
